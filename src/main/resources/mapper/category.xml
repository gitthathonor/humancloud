<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.humancloud.domain.category.CategoryDao">

	<select id="joinRecruitCategory" resultType="site.metacoding.humancloud.domain.category.Category">
	select category.* from category
	inner join recruit
	on category.category_recruit_id=recruit.recruit_id
	where recruit.recruit_company_id=#{companyId}
	</select>

	<select id="distinctName" resultType="site.metacoding.humancloud.domain.category.Category">
		select distinct (category_name) from category
	</select>

	<select id="findByResumeCategory" resultType="site.metacoding.humancloud.domain.resume.Resume">
		select resume.* from resume
		left join category
		on resume.resume_id=category.category_resume_id
		where category_name=#{categoryName}
	</select>

	<select id="findByRecruitId" resultType="site.metacoding.humancloud.domain.recruit.Recruit">
		select * from category where category_recruit_id=#{Recruit}
	</select>

	<select id="findByResumeId" resultType="site.metacoding.humancloud.domain.category.Category">
			select * from category where category_resume_id=#{resumeId}
	</select>

	<select id="findByName" resultType="site.metacoding.humancloud.domain.category.Category">
		select * from category where category_name=#{name}
	</select>

	<insert id="save">     
		insert into category(category_resume_id, category_recruit_id, category_name)
		values (#{categoryResumeId}, #{categoryRecruitId}, #{categoryName})
	</insert>

	<select id="findById" resultType="site.metacoding.humancloud.domain.category.Category">
        select * from category where category_id=#{categoryId}
	</select>
	
	<select id="findAll" resultType="site.metacoding.humancloud.domain.category.Category">
        select * from category
	</select>
	
	<delete id="deleteById">
        delete from category where category_id=#{categoryId}
	</delete>

	<update id ="update">
        update category set category_resume_id=#{resumeId}, category_recruit_id#{recruitId}, category_name=#{companyName}
        where category_id=#{categoryId}
	</update>

</mapper>